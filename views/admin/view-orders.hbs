<section>
  <div class="container pt-4">
    <p class="fs-2 fw-bold">Order list ({{orders.length}})</p>
    <table class="table mt-4">
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Address</th>
          <th scope="col">Pincode</th>
          <th scope="col">Mobile</th>
          <th scope="col">Amount</th>
          <th scope="col">Payment</th>
          <th scope="col">Status</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {{#each orders}}
          <tr>
            <td>{{this.date}}</td>
            <td>{{this.deliveryDetails.address}}</td>
            <td>{{this.deliveryDetails.pincode}}</td>
            <td>{{this.deliveryDetails.mobile}}</td>
            <td>&#8377;{{this.totalAmount}}</td>
            <td>{{this.paymentMethod}}</td>
            <td>{{this.status}}</td>
            {{#if (eq this.status "placed")}}
              <td>
                <a
                  href="/admin/dispatch-order/{{this._id}}"
                  class="btn btn-warning w-100"
                >Dispatch</a>
              </td>
            {{else if (eq this.status "dispatched")}}
              <td>
                <a
                  href="/admin/delivered-order/{{this._id}}"
                  class="btn btn-danger w-100"
                >Remove</a>
              </td>
            {{/if}}
            <td>
              <a
                href="/admin/view-order-products/{{this._id}}"
                class="btn btn-success"
              >View&nbsp;Products</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>