<section>
  <div class="container">
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">Item</th>
          <th scope="col">Title</th>
          <th scope="col">Price</th>
          <th scope="col">Quantity</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {{#each cartProducts}}
          <tr id="cart-list-item_{{this.product._id}}">
            <td>
              <img
                src="/images/product-images/{{this.product._id}}.png"
                alt=""
                style="width:70px; height:70px"
              />
            </td>
            <td>{{this.product.name}}</td>
            <td>{{this.product.price}}</td>
            <td>
              <button
                id="cart-item-quantity-minus-button_{{this.product._id}}"
                class="cart-item-count mr-3"
                onclick="changeCartItemQuantity('{{this._id}}', '{{this.product._id}}', -1)"
              >-</button>
              <span id="cart-item-quantity_{{this.product._id}}">{{this.quantity}}</span>
              <button
                class="cart-item-count ml-3"
                onclick="changeCartItemQuantity('{{this._id}}', '{{this.product._id}}', 1)"
              >+</button>
            </td>
            <td>
              <button
                class="btn btn-danger"
                onclick="removeCartItem('{{this._id}}', '{{this.product._id}}')"
              >Remove</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <div class="float-end mt-2" style="margin-right: 100px;">
      <p class="fs-4">Total: &#8377;<span
          class="fw-bold"
          id="cart-total-amount"
        >{{cartTotalAmount}}</span></p>
      <a href="/place-order" id="place-order-btn" class="btn btn-success float-end">Place order</a>
    </div>
  </div>
</section>