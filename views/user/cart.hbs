<section>
  <div class="container">
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">Item</th>
          <th scope="col">Title</th>
          <th scope="col">Quantity</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {{#each cartProducts}}
          <tr>
            <td>
              <img
                src="/images/product-images/{{this.productDetails._id}}.png"
                alt=""
                style="width:70px; height:70px"
              />
            </td>
            <td>{{this.productDetails.name}}</td>
            <td>
              <button class="cart-item-count mr-3">-</button>
              2
              <button class="cart-item-count ml-3">+</button>
            </td>
            <td>
              <a href="" class="btn btn-danger">Remove</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>