<section>
  <div class="container mt-4">
    <div class="row">
      {{#each products}}
        <div class="col-md-3 p-3">
          <div class="card" style="width: 15rem; height: auto;">
            <img
              src="/images/product-images/{{this._id}}.png"
              class="card-img-top"
              style="height: 200px;"
              alt="..."
            />
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text mb-0">{{this.description}}</p>
              <p class="card-text fw-bold">Rs. {{this.price}}</p>
              {{#if ../user}}
                <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to cart</button>
              {{/if}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>