<section>
  <div class="container mt-5">
    <h2 class="mb-5">Enter delivery details</h2>
    <form action="" method="" id="checkout-form">
      <div class="row d-flex justify-content-around">
        <div class="col-md-6">
          <div class="mb-2">
            <label for="" class="form-label">Address</label>
            <input type="text" name="address" class="form-control" value="Kandengalath House" />
          </div>
          <div class="mb-2">
            <label for="" class="form-label">Pincode</label>
            <input type="number" name="pincode" class="form-control" value="673007" />
          </div>
          <div class="mb-2">
            <label for="" class="form-label">Mobile</label>
            <input type="number" name="mobile" class="form-control" value="9876543210" />
          </div>
        </div>
        <div class="col-md-6 border border-secondary p-4" style="width:400px;">
          <div>
            <p class="fs-4">Total amount: &#8377;<span class="fw-bold">{{totalAmount}}</span></p>
          </div>
          <hr class="mb-4" />
          <div class="radio mb-3">
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="paymentMethod"
                id="flexRadio1"
                value="cod"
                checked
              />
              <label class="form-check-label" for="flexRadio1">
                Cash On Delivery
              </label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="paymentMethod"
                id="flexRadio2"
                value="online"
              />
              <label class="form-check-label" for="flexRadio2">
                Online Payment
              </label>
            </div>
          </div>
          <button type="submit" class="btn btn-primary float-end">Checkout</button>
        </div>
      </div>
    </form>
  </div>
</section>